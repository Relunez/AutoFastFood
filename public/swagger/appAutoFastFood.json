{
  "openapi": "3.0.0",
  "info": {
    "title": "AutoAtendimento de Fast Food",
    "version": "1.0.0",
    "description": "APIs para o sistema de AutoAtendimento de Fast Food"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Docker Local"
    }
  ],
  "components": {
    "schemas": {
      "TipoProdutoEnum": {
        "type": "string",
        "enum": ["Lanche", "Acompanhamento", "Bebida", "Sobremesa"]
      },
      "PedidoAtualizarStatusRequest": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["Pronto", "Em Preparação", "Recebido"]
          }
        },
        "required": ["status"]
      },
      "PedidoResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "ClienteId": {
            "type": "integer"
          },
          "DataPedido": {
            "type": "string",
            "format": "date"
          },
          "HoraPedido": {
            "type": "string",
            "format": "time"
          },
          "Produtos": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "ProdutoId": {
                  "type": "integer"
                },
                "Quantidade": {
                  "type": "integer"
                }
              }
            }
          },
          "Status": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "PedidoFakeCheckoutRequest": {
        "type": "object",
        "properties": {
          "ClienteId": {
            "type": "integer"
          },
          "Produtos": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "ProdutoId": {
                  "type": "integer"
                },
                "Quantidade": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "ClienteCadastrarRequest": {
        "type": "object",
        "properties": {
          "CPF": {
            "type": "string"
          },
          "Nome": {
            "type": "string"
          },
          "Email": {
            "type": "string"
          }
        }
      },
      "ClienteIdentificarRequest": {
        "type": "object",
        "properties": {
          "CPF": {
            "type": "string"
          },
          "Nome": {
            "type": "string"
          },
          "Email": {
            "type": "string"
          }
        }
      },
      "ClienteResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "CPF": {
            "type": "string"
          },
          "Nome": {
            "type": "string"
          },
          "Email": {
            "type": "string"
          }
        }
      },
      "ProdutoBuscarPorCategoriaRequest": {
        "type": "object",
        "properties": {
          "Categoria": {
            "type": "string"
          }
        }
      },
      "ProdutoCriarRequest": {
        "type": "object",
        "properties": {
          "Nome": {
            "type": "string"
          },
          "Descricao": {
            "type": "string"
          },
          "Valor": {
            "type": "number",
            "format": "float"
          },
          "TipoProduto": {
            "type": "string"
          }
        }
      },
      "ProdutoEditarRequest": {
        "type": "object",
        "properties": {
          "ProdutoId": {
            "type": "integer"
          },
          "Nome": {
            "type": "string"
          },
          "Descricao": {
            "type": "string"
          },
          "Valor": {
            "type": "number",
            "format": "float"
          },
          "TipoProduto": {
            "type": "string"
          }
        }
      },
      "ProdutoRemoverRequest": {
        "type": "object",
        "properties": {
          "ProdutoId": {
            "type": "integer"
          }
        }
      },
      "Produto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "Nome": {
            "type": "string"
          },
          "Descricao": {
            "type": "string"
          },
          "Valor": {
            "type": "number",
            "format": "float"
          },
          "TipoProduto": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/clientes": {
      "post": {
        "tags": [
          "Clientes"
        ],
        "summary": "Cadastrar novo cliente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClienteCadastrarRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClienteResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/clientes/identificar": {
      "get": {
        "tags": [
          "Clientes"
        ],
        "summary": "Identificar cliente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClienteIdentificarRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cliente identificado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClienteResponse"
                }
              }
            }
          },
          "404": {
            "description": "Cliente não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/produtos": {
      "post": {
        "summary": "Criar um novo produto",
        "description": "Cria um novo produto de acordo com os dados fornecidos",
        "tags": [
          "Produtos"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProdutoCriarRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produto criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Produto"
                }
              }
            }
          },
          "422": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/produtos/{id}": {
      "put": {
        "summary": "Editar um produto existente",
        "description": "Edita um produto existente com base no ID e nos dados fornecidos",
        "tags": [
          "Produtos"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProdutoEditarRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produto atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Produto"
                }
              }
            }
          },
          "404": {
            "description": "Produto não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "422": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Remover um produto existente",
        "description": "Remove um produto existente com base no ID e no tipo de produto fornecido",
        "tags": [
          "Produtos"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProdutoRemoverRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produto removido com sucesso"
          },
          "404": {
            "description": "Produto não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/produtos/buscar/{id}": {
      "get": {
        "summary": "Buscar produtos por categoria",
        "description": "Busca produtos com base no ID da categoria",
        "tags": [
          "Produtos"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Produtos encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Produto"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Produtos não encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/pedidos/checkout": {
      "post": {
        "tags": [
          "Pedidos"
        ],
        "summary": "Fake Checkout",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PedidoFakeCheckoutRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pedido criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PedidoResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/pedidos": {
      "get": {
        "tags": [
          "Pedidos"
        ],
        "summary": "Listar pedidos",
        "responses": {
          "200": {
            "description": "Lista de pedidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PedidoResponse"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Pedidos não encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/pedidos/{id}/status": {
      "put": {
        "tags": [
          "Pedidos"
        ],
        "summary": "Atualizar Status do Pedido",
        "description": "Atualiza o status do pedido.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do pedido"
          }
        ],
        "requestBody": {
          "description": "Novo status",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PedidoAtualizarStatusRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PedidoResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}
